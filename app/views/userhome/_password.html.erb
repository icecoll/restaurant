<%= form_for(@user, :url => { :action => "update_password" } ) do |f| %>
    <div class="field">
      <%= f.label '密码' %><br />
      <%= f.password_field :password, :autocomplete => "off"  %>
    </div>

    <div class="field">
      <%= f.label '确认密码' %><br />
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="field">
      <%= f.label '当前密码' %><br />
      <%= f.password_field :current_password %>
    </div>

    <div class="action_container">
      <%= f.submit '提交' %>
    </div>

<% end %>